content-header()
    border-bottom: 1px solid $border-color-split
    padding: 14px 16px
    line-height: 1

    p,
    &-inner
        display: inline-block
        width: 100%
        height: 20px
        line-height: 20px
        font-size: $font-size-base
        color: $title-color
        font-weight: bold
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap